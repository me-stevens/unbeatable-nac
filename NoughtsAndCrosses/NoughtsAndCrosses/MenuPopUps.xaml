<Window x:Class="NoughtsAndCrosses.MenuPopUps"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MenuItems" Height="300" Width="300" ResizeMode="NoResize">

	<Window.Resources>
		<ResourceDictionary Source="Styles.xaml" />
	</Window.Resources>

	<Grid>
		<TextBlock x:Name="title"   Style="{StaticResource Titles}" />
		<TextBlock x:Name="content" Style="{StaticResource Content}" />
	</Grid>

</Window>
